<?xml version="1.0" encoding="UTF-8"?>
<web-app
        version="3.1"
        metadata-complete="false"
        xmlns="http://xmlns.jcp.org/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <session-config>
        <session-timeout>60</session-timeout>
    </session-config>
    <filter>
        <filter-name>LocalizationFilter</filter-name>
        <filter-class>ml.trucking.filter.LocalizationFilter</filter-class>
        <init-param>
            <param-name>bundle</param-name>
            <param-value>messages</param-value>
        </init-param>
        <init-param>
            <param-name>locale</param-name>
            <param-value>ru</param-value>
        </init-param>
    </filter>

    <filter-mapping>
        <filter-name>LocalizationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <filter>
        <filter-name>StaticResourcesFilter</filter-name>
        <filter-class>ml.trucking.filter.StaticResourcesFilter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>StaticResourcesFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
</web-app>


